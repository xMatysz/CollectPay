<?xml version="1.0" encoding="utf-8"?>

<ui:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:ui="clr-namespace:CollectionPay.Maui.Abstraction"
                    xmlns:local="clr-namespace:CollectionPay.Maui.Pages.Start"
                    x:Class="CollectionPay.Maui.Pages.Start.StartPage"
                    x:TypeArguments="local:StartViewModel"
                    x:DataType="local:StartViewModel">

    <ContentPage.Content>

        <VerticalStackLayout HorizontalOptions="Center"
                             VerticalOptions="Center"
                             Spacing="10">

            <Label Text="Loading user data"/>

            <ActivityIndicator IsRunning="{Binding IsBusy}"
                               VerticalOptions="Fill"
                               HorizontalOptions="Fill">

            </ActivityIndicator>

        </VerticalStackLayout>

    </ContentPage.Content>
</ui:ContentPageBase>